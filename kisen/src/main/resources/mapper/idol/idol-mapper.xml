<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="idol">
<!-- 이미지 파일 조회를 위한 idol select (idolImg와 조인) 
	형제 요소인 dip_fan이랑도 조인해준다. 그래야지 사용자(fan)의 번호로 조회가능-->
	<select id="selectOneIdolCollection" resultMap="idolCollectionMap">
		select
        	di.fan_no,
			i.*,
			iI.idol_img_no,
			iI.ORIGINAL_FILENAME,
			iI.RENAMED_FILENAME,
			iI.UPLOAD_DATE		
        from 
           idol I
       left join
       		dip_idol dI
       	on
            I.idol_no = dI.idol_no
       join 
            idol_img iI
        on 
        	I.idol_no = iI.idol_no;	
        
	</select>
	<resultMap type="dipidol" id="idolCollectionMap">
		<id column="fan_no" property="fanNo"/>
		<result column="idol_no" property="idolNo"/>
		<result column="agency_no" property="agencyNo"/>
		<result column="idol_name" property="idolName"/>
		<result column="fan_cnt" property="fanCnt"/>
		
		<collection property="idolImgList" ofType="IdolImg">
			<id column="idol_no" property="idolNo"></id>
			<result column="idol_img_no" property="idolImgNo"/>
			<result column="ORIGINAL_FILENAME" property="originalFileName"/>
			<result column="RENAMED_FILENAME" property="renamedFileName"/>
			<result column="UPLOAD_DATE" property="uploadDate"/>
		</collection>

	</resultMap>

</mapper>